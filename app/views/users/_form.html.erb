<%= form_for @user do |f| %>
	<div class='container'>
		<div class='row'>
			<div class='col-md-3 form_group'>
				<%= f.label :name, class: 'control-label' %>
				<%= f.text_field :name, class: 'form-control', disabled: true %>
			</div>
			<div class='col-md-5 form_group'>
				<%= f.label :email, class: 'control-label' %>
				<%= f.text_field :email, class: 'form-control', disabled: true %>
			</div>
      <div class='col-md-2 form_group'>
  			<%= f.label :admin, class: 'control-label' %>
  			<%= f.check_box :admin, class: 'form-control', disabled: (@user.id == current_user.id) %>
      </div>
			<div class='col-md-2 form_group'>
				<%= f.submit 'Submit', class: 'btn btn-success' %>
			</div>
		</div>
	</div>
<% end %>
