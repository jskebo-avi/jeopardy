<div class='container'>
	<div class='row'>
		<div class='col-md-6'>
			<div class='clearfix'>
				<div class='pull-left'>
					<h3><%= link_to clue.category, edit_clue_path(clue) %></h3>
				</div>
				<div class='pull-right'>
					<h3><%= ' $' + clue.value.to_s %></h3>
				</div>
			</div>
			<p>
				<%= clue.text %>
			</p>
			<h4><%= clue.correct_answer %></h4>
		</div>
		<div class='col-md-6'>
			<table class='table'>
				<tr>
					<th>Player</th>
					<th>Response</th>
					<th>Score</th>
					<% if clue.final? %>
						<th>Wager</th>
						<th>Final Score</th>
					<% end %>
					<th></th>
					<th></th>
					<th></th>
				</tr>
				<% clue.answers.sort_by{ |a| [-a.user_current_score, a.user.name] }.each do |answer| %>
					<tr class="<%= case answer.status when 1 then 'answer-correct' when -1 then 'answer-incorrect' else 'answer-pending' end %>" id="<%= answer.id %>">
						<td class="answer-user" id="<%= answer.user_id %>"><%= answer.user.name %></td>
						<td><%= answer.response %></td>
						<% if clue.final? %>
							<td class='previous_score'><%= answer.user_previous_score %></td>
							<td><%= answer.wager %></td>
							<td class='current_score'><%= answer.user_current_score %></td>
						<% else %>
							<td class='current_score'><%= answer.user_current_score %></td>
						<% end %>
						<td><button class="btn_correct" type="button" data-clue="<%= clue.id %>" data-answer="<%= answer.id %>">Correct</button></td>
						<td><button class="btn_incorrect" type="button" data-clue="<%= clue.id %>" data-answer="<%= answer.id %>">Incorrect</button></td>
						<td><button class="btn_delete" type="button" data-clue="<%= clue.id %>" data-answer="<%= answer.id %>">Delete</button></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
