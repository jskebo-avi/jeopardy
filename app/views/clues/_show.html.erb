<div class='container'>
	<div class='row'>
		<div class='col-md-6'>
			<div class='clearfix'>
				<div class='pull-left'>
					<h3><%= clue.category %></h3>
				</div>
				<div class='pull-right'>
					<h3><%= clue.value_label %></h3>
				</div>
			</div>
			<% if !current_user.nil? and current_user.current_clue_of_week.seq >= clue.seq and (!clue.final? or current_user.clue_wagered(clue.id)) %>
				<p>
					<%= clue.text %>
				</p>
			<% end %>
			<% if !current_user.nil? and current_user.clue_answered(clue.id) %>
				<h4><%= clue.correct_answer %></h4>
			<% end %>
		</div>
		<div class='col-md-6'>
			<table class='table'>
				<tr>
					<th>Player</th>
					<th>Response</th>
					<!--<th>Score</th>-->
					<% if clue.final? %>
						<th>Wager</th>
						<!--<th>Final Score</th>-->
					<% end %>
				</tr>
				<% if !current_user.nil? and current_user.clue_answered(clue.id) %>
					<% clue.answers.sort_by{ |a| [-clue.user_current_score(a.user.id), a.user.name] }.each do |answer| %>
						<tr class="<%= case answer.status when 1 then 'answer-correct' when -1 then 'answer-incorrect' else 'answer-pending' end %>" id="<%= answer.id %>">
							<td class="answer-user" id="<%= answer.user_id %>"><%= answer.user.name %></td>
							<td><%= answer.response %></td>
							<% if clue.final? %>
								<!--<td class='previous_score'><%= clue.user_previous_score(answer.user.id) %></td>-->
								<td><%= answer.wager %></td>
								<!--<td class='current_score'><%= clue.user_current_score(answer.user.id) %></td>-->
							<% else %>
								<!--<td class='current_score'><%= clue.user_current_score(answer.user.id) %></td>-->
							<% end %>
						</tr>
					<% end %>
				<% end %>
			</table>
		</div>
	</div>
</div>
