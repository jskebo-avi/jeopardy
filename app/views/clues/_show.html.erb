<div class='container'>
	<div class='row'>
		<div class='col-xs-6'>
			<h3><%= clue.category + ' ' + clue.value.to_s %></h3>
			<p>
				<%= clue.text %>
			</p>
		</div>
		<div class='col-xs-6'>
			<table class='table'>
				<tr>
					<th>Player</th>
					<th>Response</th>
					<th>Score</th>
					<% if clue.final? %>
						<th>Wager</th>
						<th>Final Score</th>
					<% end %>
				</tr>
				<% clue.answers.sort_by{ |a| [-a.user_current_score, a.user] }.each do |answer| %>
					<tr class="<%= case answer.status when 1 then 'answer-correct' when -1 then 'answer-incorrect' else 'answer-pending' end %>" id="<%= answer.id %>">
						<td class="answer-user"><%= answer.user %></td>
						<td><%= answer.response %></td>
						<% if clue.final? %>
							<td class='previous_score'><%= answer.user_previous_score %></td>
							<td><%= answer.wager %></td>
							<td class='current_score'><%= answer.user_current_score %></td>
						<% else %>
							<td class='current_score'><%= answer.user_current_score %></td>
						<% end %>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>