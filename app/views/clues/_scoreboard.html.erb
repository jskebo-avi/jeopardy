<table class='table table-bordered'>
  <tr>
    <th colspan="2">
      <h4>This Week's Scores</h4>
    </th>
  </tr>
  <tr>
    <th>Player</th>
    <th>Score</th>
  </tr>
  <% if !current_user.nil? and !@scoreClue.nil? %>
    <% @scoreUsers.sort_by{ |u| [-@scoreClue.user_current_score(u.id), u.name] }.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td class="j-score text-right">$<%= @scoreClue.user_current_score(user.id) %></td>
      </tr>
    <% end %>
  <% end %>
</table>
