<div class='container'>
	<div class='row'>
		<div class='col-md-12'>
			<h3><%= @clue.category + " " + @clue.value_label %></h3>
		</div>
	</div>
  <div class='row'>
		<div class='col-md-12'>
			<h4>Editing <%= @answer.user.name %>'s Answer...</h4>
		</div>
	</div>
	<div class='row'>
		<div class='col-md-12'>
      <%= form_for [@clue, @answer] do |f| %>
      	<div class='container'>
      		<div class='row'>
      			<div class='col-md-7 form_group'>
      				<%= f.label :response, class: 'control-label' %>
      				<%= f.text_field :response, class: 'form-control' %>
      			</div>
            <% if @clue.final? %>
        			<div class='col-md-3 form_group'>
        				<%= f.label :wager, class: 'control-label' %>
        				<%= f.text_field :wager, class: 'form-control' %>
        			</div>
            <% end %>
      			<div class='col-md-2 form_group'>
              <%= hidden_field_tag(:admin_update, true) %>
      				<%= f.submit 'Submit', class: 'btn btn-success navbar-btn' %>
      			</div>
      		</div>
      	</div>
      <% end %>
		</div>
	</div>
	<div class='row'>
		<div class='col-md-6' style='padding-top: 20px'>
			<%= link_to 'Back', clues_path(day: @day), class: 'btn btn-default' %>
		</div>
	</div>
</div>
